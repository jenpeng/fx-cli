{
  "name": "fx-cli",
  "version": "1.0.0",
  "description": "纷享销客开发工具CLI，支持代码拉取、部署和Jenkins集成",
  "main": "bin/fx-cli.js",
  "bin": {
    "fx-cli": "./bin/fx-cli.js"
  },
  "scripts": {
    "start": "node bin/fx-cli.js",
    "test": "jest",
    "build": "npm run lint && npm run test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "pack": "npm pack",
    "publish:local": "npm install -g .",
    "publish:npm": "npm publish",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "keywords": [
    "fxiaoke",
    "cli",
    "development",
    "deployment",
    "jenkins"
  ],
  "author": "fxiaoke",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "crypto-js": "^4.2.0",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.12",
    "jenkins": "^1.0.1",
    "jszip": "^3.10.1",
    "ora": "^7.0.1",
    "request": "^2.88.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "bin/",
    "src/",
    "docs/",
    "templates/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fxiaoke/fx-cli.git"
  },
  "bugs": {
    "url": "https://github.com/fxiaoke/fx-cli/issues"
  },
  "homepage": "https://github.com/fxiaoke/fx-cli#readme"
}